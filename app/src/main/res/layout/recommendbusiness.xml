<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/business_category_tv">
    <TextView
        android:id="@+id/tv_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/text_header_color"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/jost_medium_500"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#24343F"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/jost_regular_400"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/jost_regular_400"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/text_header_color"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/jost_medium_500"
        android:layout_marginHorizontal="10dp"/>
    <LinearLayout
        android:id="@+id/accept_reject_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/block_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:backgroundTint="#DF1B1B"
            android:text="Block"
            android:textAllCaps="false"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"
            android:backgroundTint="#2E8A06"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>