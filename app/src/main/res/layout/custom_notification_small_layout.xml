<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">
        <!-- Parent layout for holding the Title and the Body-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- TextView for Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:fontFamily="@font/jost_medium_500"
                android:textColor="@color/text_header_color"
                android:textSize="14dp"
                android:textStyle="bold" />
            <!-- TextView for Time -->
            <!-- TextView for Body -->
            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="message"
                android:fontFamily="@font/jost_regular_400"
                android:textColor="@color/text_header_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_regno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="visible" />


        </LinearLayout>

        <!-- Parent Layout of ImageView -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--Image to be displayed beside the notification text-->
            <ImageView
                android:id="@+id/icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_launcher_new" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>