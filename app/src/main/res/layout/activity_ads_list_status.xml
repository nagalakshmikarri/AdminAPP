<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdsListStatusActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F7A07B">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="22dp"
                android:fontFamily="@font/jost_medium_500"
                android:text="@string/AmplifierAdmin"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/access_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="22dp"
                android:src="@drawable/logout" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="22dp"
            android:background="#F7A07B"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_sub_admin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/jost_medium_500"
                android:text="sub admin"
                android:textColor="@color/text_header_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jost_regular_400"
                android:gravity="center_horizontal"
                android:text="@string/vamsi"
                android:textColor="@color/text_header_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="22dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium_500"
                    android:gravity="center_horizontal"
                    android:text="@string/Accept"
                    android:textColor="@color/text_header_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_accept_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/jost_medium_500"
                    android:gravity="center_horizontal"
                    android:textColor="@color/text_header_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.6"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium_500"
                    android:gravity="center"
                    android:text="@string/Reject"
                    android:textColor="@color/text_header_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_reject_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/jost_medium_500"
                    android:gravity="center"
                    android:textColor="@color/text_header_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/businesscategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pending_list"
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/pending_list"
                android:visibility="visible"
                app:tint="#F1744B" />

            <TextView
                android:id="@+id/tv_pending_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/pending_list"
                android:fontFamily="@font/jost_medium_500"
                android:text="@string/PEDINGADSLIST"
                android:textColor="@color/text_header_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15sp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                android:visibility="visible"
                app:tint="#F1744B" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:background="@color/litegray" />


        <RelativeLayout
            android:id="@+id/adceeptads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Accept_ads"
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/accepted_list"
                android:visibility="visible"
                app:tint="#F1744B" />

            <TextView
                android:id="@+id/tv_aceeptads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/Accept_ads"
                android:fontFamily="@font/jost_medium_500"
                android:text="@string/ACCEPTADSLIST"
                android:textColor="@color/text_header_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15sp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                android:visibility="visible"
                app:tint="#F1744B" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:background="@color/litegray" />

        <RelativeLayout
            android:id="@+id/rejectads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reject_ads"
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/rejected_list"
                android:visibility="visible"
                app:tint="#F1744B" />

            <TextView
                android:id="@+id/AdsRejected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/reject_ads"
                android:fontFamily="@font/jost_medium_500"
                android:text="@string/REJECTADSLIST"
                android:textColor="@color/text_header_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15sp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                android:visibility="visible"
                app:tint="#F1744B" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:background="@color/litegray" />
        <RelativeLayout
            android:id="@+id/business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/businnessslist"
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/business_add"
                android:visibility="visible"
                app:tint="#F1744B" />

            <TextView
                android:id="@+id/Business_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/businnessslist"
                android:fontFamily="@font/jost_medium_500"
                android:text="@string/BusinessADSList"
                android:textColor="@color/text_header_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15sp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                android:visibility="visible"
                app:tint="#F1744B" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:background="@color/litegray" />

        <RelativeLayout
            android:id="@+id/cliam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cliambusiness"
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/cliam_business"
                android:visibility="visible"
                app:tint="#F1744B" />

            <TextView
                android:id="@+id/Cliam_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/cliambusiness"
                android:fontFamily="@font/jost_medium_500"
                android:text="@string/CliamBusiness"
                android:textColor="@color/text_header_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15sp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                android:visibility="visible"
                app:tint="#F1744B" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:background="@color/litegray" />
        <RelativeLayout
            android:id="@+id/referbusiness1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/referbusiness"
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/business_add"
                android:visibility="visible"
                app:tint="#F1744B" />

            <TextView
                android:id="@+id/refer_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/referbusiness"
                android:fontFamily="@font/jost_medium_500"
                android:text="@string/refer_business"
                android:textColor="@color/text_header_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15sp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                android:visibility="visible"
                app:tint="#F1744B" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:background="@color/litegray" />
        <RelativeLayout
            android:id="@+id/category1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/category"
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/business_add"
                android:visibility="visible"
                app:tint="#F1744B" />

            <TextView
                android:id="@+id/category_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/category"
                android:fontFamily="@font/jost_medium_500"
                android:text="@string/Category"
                android:textColor="@color/text_header_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15sp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                android:visibility="visible"
                app:tint="#F1744B" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:background="@color/litegray" />

        <RelativeLayout
            android:id="@+id/business_list_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/List_business"
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/business_add"
                android:visibility="visible"
                app:tint="#F1744B" />

            <TextView
                android:id="@+id/Business_List"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/List_business"
                android:fontFamily="@font/jost_medium_500"
                android:text="@string/Business_list"
                android:textColor="@color/text_header_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25sp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="15sp"
                android:src="@drawable/ic_baseline_arrow_right_24"
                android:visibility="visible"
                app:tint="#F1744B" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/glass_transperent2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/loaderCard"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="visible"
            app:cardCornerRadius="6dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/avi"
                    android:fontFamily="@font/jost_medium_500"
                    android:gravity="center_horizontal"
                    android:text="@string/loading"
                    android:textColor="@color/appcolor"
                    android:textSize="18dp"
                    app:fontFamily="@font/dosis_semibold" />
                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avi"
                    style="@style/AVLoadingIndicatorView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:visibility="visible"
                    app:indicatorColor="@color/appcolor"
                    app:indicatorName="BallPulseIndicator" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>