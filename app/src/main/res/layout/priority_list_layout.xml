<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="5sp"
    android:layout_marginTop="10sp"
    >
    <TextView
        android:id="@+id/business_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_medium_500"
        android:textColor="@color/text_header_color"
        android:maxLines="2"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_regular_400"
        android:textColor="@color/text_header_color"
        android:maxLines="4"
        android:textSize="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/st_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jost_regular_400"
            android:textColor="#F7A07B"
            android:textSize="13dp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/tv_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:fontFamily="@font/jost_bold_700"
            android:text="\u00b7"
            android:textColor="#F7A07B"
            android:layout_toEndOf="@+id/st_date"
            android:textSize="12sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/ed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jost_regular_400"
            android:textColor="#F7A07B"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@+id/tv_dot"
            android:textSize="13dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jost_medium_500"
            android:textColor="@color/text_header_color"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:textSize="13dp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/amount_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jost_medium_500"
        android:textColor="@color/text_header_color"
        android:textSize="14dp" />

</LinearLayout>